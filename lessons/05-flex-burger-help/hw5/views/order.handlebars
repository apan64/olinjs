<h1>Welcome to Jessica's Burgers!</h1>

<form id = "selection">
<ul id = 'ingredientList'>
{{#each ingredients}}
<div id = {{this._id}} class = "ingredientPick">{{this.name}} - ${{this.price}}<input type = "checkbox" {{this.disabled}} id = {{this._id}} class = "checkbox" name = {{this.name}} /></div><br>
{{/each}}
<div class = "ingredientPick" style = "display: none"><input type = "checkbox" class = "checkbox"/></div><br>
</ul>
</form>
<div id = "running-total"></div><br>
<div id = "submitted"></div><br>
<form id = "submit-order">
<input type = "submit" value = "submit">
</form>
